.reader { display:flex; flex-direction:column; height:100vh; }
.title { font-size:28rpx; padding: 20rpx 16rpx; }
.content { flex:1; padding: 0 16rpx; }
.para { margin: 16rpx 0; line-height: 1.7; }
.toolbar { display:flex; gap: 16rpx; padding: 16rpx; border-top: 1px solid #eee; background:#fff; }
.settings { display:flex; gap: 12rpx; padding: 0 16rpx 12rpx 16rpx; }
.theme-dark .toolbar { background:#1b1e24; border-top: 1px solid #333; }
.theme-dark .title { color:#f5f5f5; }
.theme-dark .para { color:#e8e8e8; }
