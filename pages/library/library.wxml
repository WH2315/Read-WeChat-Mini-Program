<view class="list">
  <view wx:if="{{loading}}" class="tip">加载中...</view>
  <view wx:if="{{error}}" class="tip error">加载失败，点击重试<button size="mini" bindtap="loadNovels">重试</button></view>
  <view wx:if="{{!loading && !error && novels.length === 0}}" class="tip">暂无数据</view>

  <block wx:for="{{novels}}" wx:key="id">
    <view class="item" bindtap="goDetail" data-id="{{item.id}}">
      <view class="title">{{item.title}}</view>
      <view class="meta">{{item.author}}</view>
      <view class="desc">{{item.desc}}</view>
    </view>
  </block>

  <view wx:if="{{!loading && hasMore}}" class="tip" bindtap="loadMore">点击加载更多</view>
  <view wx:if="{{!loading && !hasMore && novels.length>0}}" class="tip">没有更多了</view>
</view>
