<view class="list">
  <view wx:if="{{loading}}" class="tip">加载中...</view>
  <view wx:if="{{error}}" class="tip error">加载失败，点击重试<button size="mini" bindtap="loadNews">重试</button></view>
  <view wx:if="{{!loading && !error && items.length === 0}}" class="tip">暂无数据</view>

  <block wx:for="{{items}}" wx:key="id">
    <view class="item" bindtap="goDetail" data-id="{{item.id}}">
      <view class="title">{{item.title}}</view>
      <view class="summary">{{item.summary}}</view>
      <view class="date">{{item.date}}</view>
    </view>
  </block>

  <view wx:if="{{!loading && hasMore}}" class="tip" bindtap="loadMore">点击加载更多</view>
  <view wx:if="{{!loading && !hasMore && items.length>0}}" class="tip">没有更多了</view>
</view>
